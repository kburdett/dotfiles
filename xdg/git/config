[core]
    excludesfile = ignore
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
[format]
    pretty = medium
[push]
    default = simple
[alias] 
    cp = cherry-pick
    sq = show --quiet
    rp = repack -a -d --depth=500 --window=1000 -f
    mnff = merge --no-ff
    ss = status -sb

    aa = add .

    dt = difftool 
    dtc = difftool --cached
    mt = mergetool 

    co = checkout
    cob = checkout -b
    cod = checkout develop
    com = checkout master

    cm = commit
    cmm = commit -m
    cma = commit --amend

    br = branch
    brl = branch -vv
    brr = branch -rvv
    bra = branch -avv
    brd = branch -dvv
    brD = branch -Dvv

    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lrc = log -5 --decorate

    po = push origin
    puo = push -u origin
    pom = push origin master
    pod = push origin develop
    pum = push upstream master
    pud = push upstream develop 

    fp = fetch -p
    fpo = fetch -p origin
    fpu = fetch -p upstream

    pff = pull --ff-only --no-rebase
    pffom = pull --ff-only --no-rebase origin master
    pffod = pull --ff-only --no-rebase origin develop
    pffum = pull --ff-only --no-rebase upstream master
    pffud = pull --ff-only --no-rebase upstream develop

    pr = pull -r
    prom = pull -r origin master
    prod = pull -r origin develop
    prum = pull -r upstream master
    prud = pull -r upstream develop

    ri = rebase -i
    rom = rebase origin/master
    rod = rebase origin/develop
    rum = rebase upstream/master
    rud = rebase upstream/develop 
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[diff]
    renameLimit = 5000 
[color "diff-highlight"]
	oldNormal = red bold
	newHighlight = green bold 22
	oldHighlight = red bold 52
	newNormal = green bold
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f 
[include]
    path = ~/dotfiles/xdg/git/config.local
    path = ~/dotfiles/xdg/git/config.os 

